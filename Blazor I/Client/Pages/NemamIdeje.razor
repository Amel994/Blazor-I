    {
        KaHabu = new HubConnectionBuilder().WithUrl(NM.ToAbsoluteUri("NasHub")).Build();

        KaHabu.On<string>("KlijentMetoda",poruka => 
                                          {
                                              Console.WriteLine("javio se server :D : " + poruka); 
